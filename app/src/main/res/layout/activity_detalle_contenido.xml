<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleContenidoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Detalles"
            android:textAlignment="center"
            android:textColor="#9C27B0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtid_contenido"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:paddingStart="5dp"
            android:text="ID:"
            android:textAlignment="viewStart"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtCancion"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingStart="5dp"
            android:text="Nombre Cancion:"
            android:textAlignment="viewStart"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtArtistas"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingStart="5dp"
            android:text="Artista:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtAlbums"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingStart="5dp"
            android:text="Album:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtGen"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingStart="5dp"
            android:text="Genero:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtFecha_lanzamiento"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingStart="5dp"
            android:text="Fecha:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLink_video"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingStart="5dp"
            android:text="Link:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtPortadas"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingStart="5dp"
            android:text="Portada:"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>